<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/add-user">Add User</a>
    </div>
    <div class="table-container">
        <div class="title">List Users</div>
        <table>
            <tr>
              <th>ID</th>
              <th>Email</th>
              <th>Name</th>
              <th>City</th>
              <th>Action</th>
            </tr>
            <% for(let i = 0; i < users.length; i++){%>
                <tr>
                    <td><%= users[i].id %></td>
                    <td><%= users[i].email %></td>
                    <td><%= users[i].name %></td>
                    <td><%= users[i].city %></td>
                    <td>
                        <a href="/edit-user/<%= users[i].id%>" type="button">Edit</a>
                        <form action="/delete-user/<%= users[i].id%>" method="get">
                            <button type="submit">Delete</button>
                        </form>
                        
                    </td>
                </tr>
            <%}%>
            
        </table>
    </div>
    
    
</body>
</html>